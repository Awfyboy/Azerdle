# code for statring a round
func initialize_round():
	SignalBus.game_started.emit()
	pick_new_word()
	if round_count > 1:
		tween_round_counter()
		reset_arrows()
	
	error_box.hide()
	max_guesses = guesses.get_child_count()
	rounds_text.text = str(round_count)
	current_block = 0
	current_row = 0
	can_type = true
	can_check_info = true


# pick new word
